<div class="summary">
<ul>
{% for entry in summary %}
<div class="slide middleSlide summarySlide">
<li>
    <a href="{{ entry.slug }}.html">
        {% if entry.number %}{{ entry.number }} - {% endif %}
        {{ entry.chapter }}
    </a>
    <ul>
    {% for part in entry.parts %}
        <li>
            <a href="{{ entry.slug }}.html#part{{ part.number }}">
                {{ part.number }} - {{ part.title }}
            </a>
        </li>
    {% endfor %}

    {% for annex in entry.annexes %}
        <li class="annexSummary">
            <a href="{{ annex.slug }}.html">
                Annexe&nbsp;: {{ annex.chapter }}
            </a>
        </li>
    {% endfor %}
    </ul>
</li>
</div>
{% endfor %}
</ul>
</div>
